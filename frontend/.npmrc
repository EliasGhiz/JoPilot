# Make installs faster and more predictable
save-exact=true
fund=false
audit=false
progress=false
loglevel=error

# Use hard links instead of copying files during install
link-duplicates=true
use-node-gyp=false

# Only install exact versions specified in package-lock.json
package-lock=true

# Don't generate a package-lock.json automatically
package-lock-only=false

# Faster installs by skipping optional dependencies
prefer-offline=true
no-optional=true
omit=optional

# Enable concurrent downloads
maxsockets=10
fetch-retries=3
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=60000

# Ensure optional dependencies are installed (needed for rollup native modules)
optional=true

# Don't ignore scripts (needed for native module compilation)
ignore-scripts=false

# Increase network timeout for better stability
network-timeout=60000

# Enable strict-ssl for security
strict-ssl=true
